<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/largepadding"
    android:background="@color/fragment_background"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/lastCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/ghostwhite"
        app:cardCornerRadius="@dimen/mediummargin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivcar222"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="@dimen/mediummargin"
                android:padding="@dimen/smallpadding"
                android:src="@drawable/mercindes"
                app:layout_constraintBottom_toTopOf="@+id/car2text22"
                app:layout_constraintEnd_toStartOf="@+id/tvcartextduration22"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvcartextduration22"
                android:layout_width="45dp"
                android:layout_height="15dp"
                android:layout_margin="@dimen/mediummargin"
                android:background="@drawable/textview_shape"
                android:backgroundTint="@color/black1"
                android:gravity="center"
                android:text="Daily"
                android:textColor="@color/white"
                android:textSize="@dimen/mediumTextSize"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/car2text22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mediummargin"
                android:text="Civic Type R 2019"
                android:textColor="@color/black"
                android:textSize="@dimen/largeTextSize"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/tvcartextsub22"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvcartextsub22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/mediummargin"
                android:text="Civic Type R 2019"
                android:textColor="@color/black"
                android:textSize="@dimen/mediumTextSize"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>